<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign conferences = data[1] | sort: 'startDate' | reverse %}
  {% for content in conferences %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.startDate %}
            {% assign date = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                    {{ date }}
                  </span>
                </td>
              </tr>
              {% if content.location %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">{{ content.title }}</h6>
          {% if content.url %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.9rem">
              <a href="{{ content.url }}">{{ content.event }}</a>
            </h6>
          {% else %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.9rem">{{ content.event }}</h6>
          {% endif %}
          <p class="ml-1 ml-md-4" style="font-size: 0.8rem;">
            {% if content.type == "Oral Presentation" %}
              ðŸŽ¤ Oral Presentation
            {% elsif content.type == "Poster" %}
              ðŸ“œ Poster
            {% endif %}
          </p>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
